{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "strict": true,
        "declaration": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "dist",
        // "outFile": "index.js"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist", "dist/**/*"]
}